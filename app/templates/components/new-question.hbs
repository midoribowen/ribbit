{{#if addNewQuestion}}
  <h2>New Question</h2>
  <div>
    <form class="col-md-6 col-center">
      <div class="form-group">
        <label for="question">Question</label>
        {{input class="form-control" value=question id="question"}}
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="notes">Notes</label>
        {{input class="form-control" value=notes id="notes"}}
      </div>
      <button {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
  {{else}}
    <button {{action 'questionFormShow'}}>New Question</button>
{{/if}}
